<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hector Hajj | Krispy Kreme MVC .NET Framework | DB First approach </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-light">
        <div class="container">
            @Html.ActionLink("KRISPY KREME EXAM 1", "Index", "Home", new { area = "" }, new { @class = "navbar-brand krispyRedText fw-bold" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        @Html.ActionLink("HOME", "Index", "Home", new { area = "" }, new { @class = $"nav-link fw-bold {(IsActive("Home", "Index") ? "krispyRedText" : "krispyGreenText")}" })
                    </li>
                    <li>
                        @Html.ActionLink("STORE", "Store", "Home", new { area = "" }, new { @class = $"nav-link fw-bold {(IsActive("Home", "Store") ? "krispyRedText" : "krispyGreenText")}" })
                    </li>
                    <li>
                        @Html.ActionLink("DASHBOARD", "Dashboard", "Home", new { area = "" }, new { @class = $"nav-link fw-bold {(IsActive("Home", "Dashboard") ? "krispyRedText" : "krispyGreenText")}" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="krispyGreenText">&copy; 18/08/2024 - Hector Hajj | Krispy Kreme MVC .NET Framework | DB First approach </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>

@functions {
    public bool IsActive(string controller, string action)
    {
        var routeData = ViewContext.RouteData;
        var routeAction = routeData.Values["action"]?.ToString();
        var routeController = routeData.Values["controller"]?.ToString();

        return string.Equals(action, routeAction, StringComparison.OrdinalIgnoreCase) &&
               string.Equals(controller, routeController, StringComparison.OrdinalIgnoreCase);
    }
}